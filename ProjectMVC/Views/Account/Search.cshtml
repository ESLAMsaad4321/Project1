@model IEnumerable<ProjectMVC.Models.AccountViewModel>

@{
    ViewData["Title"] = "Search";
}

<h1>Search</h1>

<p>
    @using (Html.BeginForm("Search", "Account", FormMethod.Get))
    {
        @Html.TextBox("id")
        <input type="submit" value="Search" />
    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nationalid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dateofbirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Language)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Languagelevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lineofbusiness)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nationalid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dateofbirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Language)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Languagelevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Account1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lineofbusiness)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Index">Back to List</a>
</div>